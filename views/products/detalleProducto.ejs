<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include ('../partials/head.ejs') %>
    <link rel="stylesheet" href="/css/styles.css">
    <title>Detalle producto</title>
</head>
  <body>
  <%- include ('../partials/header.ejs') %>
    <main>
      <section class="main-detalle">
        <div class="imagen-principal-producto">
          <img src="/images/products/<%= productoDetalle.imagen %>" alt="" id="img-carrito">
        </div>
        <div class="informacion-producto">
          <div class="nombre-producto">
            <h3 id="nombre-carrito"> <%= productoDetalle.nombre %> </h3>
          </div>
          <div class="etiquetas-producto">
            <span class="descuento-producto"> <%= productoDetalle.descuento %> % OFF </span>
          </div>
          <h4 class="precio-producto" id="precio-carrito"> $<%= productoDetalle.precio %> </h4>
          <p> <i class="fas fa-truck"></i>  Envíos a todo el país </p>
          <div class="opciones-producto">
            <form action="" method="">
              <select name="cantidad-producto" id="cantidad-producto">
                <option value="1" selected>1</option>
                <option value="2">2</option>
                <option value="3">3</option>
                <option value="4">4</option>
              </select>
              <select name="color-producto" id="color-producto">
                <option value="Rojo">Rojo</option>
                <option value="Violeta">Violeta</option>
                <option value="Rosa">Rosa</option>
                <option value="Negro">Negro</option>
              </select>
            </form>
          </div>
          <div class="boton-compra-producto">
            <button type="submit" id="btn-carrito"> AGREGAR AL CARRITO </button>
          </div>
          <div class="descripcion-producto">
            <div class="accordion accordion-flush" id="accordionFlushExample">
              <div class="accordion-item">
                <h2 class="accordion-header" id="flush-headingOne">
                  <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#flush-collapseOne" aria-expanded="false" aria-controls="flush-collapseOne">
                   <strong> DESCRIPCIÓN </strong>
                  </button>
                </h2>
                <div id="flush-collapseOne" class="accordion-collapse collapse" aria-labelledby="flush-headingOne" data-bs-parent="#accordionFlushExample">
                  <div class="accordion-body"><%= productoDetalle.descripcion %></div>
                </div>
              </div>
              <div class="accordion-item">
                <h2 class="accordion-header" id="flush-headingTwo">
                  <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#flush-collapseTwo" aria-expanded="false" aria-controls="flush-collapseTwo">
                    <strong> MODO DE USO </strong>
                  </button>
                </h2>
                
                <div id="flush-collapseTwo" class="accordion-collapse collapse" aria-labelledby="flush-headingTwo" data-bs-parent="#accordionFlushExample">
                  <div class="accordion-body"><%= productoDetalle.modo_de_uso %></div>
                </div>
              </div>
            </div>
          </div>
          <div class="botonesABM" >
            <a href="/productos/edicion/<%=productoDetalle.id%>" class="botonEdicion" >EDITAR PRODUCTO</a>
            <form action="/productos/<%=productoDetalle.id%>?_method=DELETE" method="POST" onsubmit="return confirm('Esta seguro que desea eliminarlo?');"> 
              <button type="submit" class="botonEliminar">ELIMINAR</button>
            </form>
          </div>
        </div>
      </section>
      <div id="linea-detalle"></div>
      <h4 id="texto-productos-similares"> PRODUCTOS SIMILARES </h4>
      <section class="productos-similares">
        <div class="productos">
          <img src="/images/juguete-anal-1.jpg" alt="">
          <div class="precio-productos-similares">
            <span> $1.199 </span>
          </div>
        </div>
        <div class="productos">
          <img src="/images/vibrador-1.jpg" alt="">
          <div class="precio-productos-similares">
            <span> $2.899 </span>
          </div>
        </div>
        <div class="productos">
          <img src="/images/gel-1.jpg" alt="">
          <div class="precio-productos-similares">
            <span> $890 </span>
          </div>
        </div>
        <div class="productos">
          <img src="/images/vibrador-2.png" alt="">
          <div class="precio-productos-similares">
            <span> $4.800 </span>
          </div>
        </div>
      </section>
    </main>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-U1DAWAznBHeqEIlVSCgzq+c9gqGAJn5c/t99JyeKa9xxaYpSvHU5awsuZVVFIhvj" crossorigin="anonymous"></script>
    <%- include ('../partials/footer.ejs') %>
    <script>
      function menuToggle(){
          const toggleMenu = document.querySelector('.menu');
          toggleMenu.classList.toggle('active')
      }
  </script>
  <script src="/js/detalleProducto.js"></script>
</body>
</html>