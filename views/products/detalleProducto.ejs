<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include ('../partials/head.ejs') %>
    <link rel="stylesheet" href="/css/styles.css">
    <title>Detalle de <%= data[0].nombre %></title>
</head>
  <body>
  <%- include ('../partials/header.ejs') %>
    <main>
      <section class="main-detalle">
        <div class="imagen-principal-producto">
          <img src="/images/products/<%= data[0].imagen %>" alt="" id="img-carrito">
        </div>
        <div class="informacion-producto">
          <div class="nombre-producto">
            <h3 id="nombre-carrito"> <%= data[0].nombre %> </h3>
          </div>
          <div class="etiquetas-producto">
            <% if(data[0].descuento >= 5) { %>
              <span class="descuento-producto"> <%= data[0].descuento %> % OFF </span>
            <% } %> 
          </div>
          <h4 class="precio-producto" id="precio-carrito"> $<%= data[0].precio %> </h4>
          <p> <i class="fas fa-truck"></i>  Envíos a todo el país </p>
          <div class="opciones-producto">
            <form action="" method="">
              <select name="cantidad-producto" id="cantidad-producto">
                <option value="1" selected>1</option>
                <option value="2">2</option>
                <option value="3">3</option>
                <option value="4">4</option>
              </select>
              <select name="color-producto" id="color-producto">
                <option value="Rojo">Rojo</option>
                <option value="Violeta">Violeta</option>
                <option value="Rosa">Rosa</option>
                <option value="Negro">Negro</option>
              </select>
            </form>
          </div>
          <div class="boton-compra-producto">
            <button type="submit" id="btn-carrito"> AGREGAR AL CARRITO </button>
          </div>
          <div class="descripcion-producto">
            <div class="accordion accordion-flush" id="accordionFlushExample">
              <div class="accordion-item">
                <h2 class="accordion-header" id="flush-headingOne">
                  <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#flush-collapseOne" aria-expanded="false" aria-controls="flush-collapseOne">
                   <strong> DESCRIPCIÓN </strong>
                  </button>
                </h2>
                <div id="flush-collapseOne" class="accordion-collapse collapse" aria-labelledby="flush-headingOne" data-bs-parent="#accordionFlushExample">
                  <div class="accordion-body"><%= data[0].descripcion %></div>
                </div>
              </div>
              <div class="accordion-item">
                <h2 class="accordion-header" id="flush-headingTwo">
                  <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#flush-collapseTwo" aria-expanded="false" aria-controls="flush-collapseTwo">
                    <strong> MODO DE USO </strong>
                  </button>
                </h2>
                
                <div id="flush-collapseTwo" class="accordion-collapse collapse" aria-labelledby="flush-headingTwo" data-bs-parent="#accordionFlushExample">
                  <div class="accordion-body"><%= data[0].modo_de_uso %></div>
                </div>
              </div>
            </div>
          </div>
          <% if(locals.isLogged && data[1].administrador == 1) { %> 
            <div class="botonesABM" >
              <a href="/productos/edicion/<%=data[0].id%>" class="botonEdicion" >EDITAR PRODUCTO</a>
              <form action="/productos/<%=data[0].id%>?_method=DELETE" method="POST" onsubmit="return confirm('Esta seguro que desea eliminarlo?');"> 
                <button type="submit" class="botonEliminar">ELIMINAR</button>
              </form>
            </div>
          <% } %>
        </div>
      </section>
    </main>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-U1DAWAznBHeqEIlVSCgzq+c9gqGAJn5c/t99JyeKa9xxaYpSvHU5awsuZVVFIhvj" crossorigin="anonymous"></script>
    <%- include ('../partials/footer.ejs') %>
    <script>
      function menuToggle(){
          const toggleMenu = document.querySelector('.menu');
          toggleMenu.classList.toggle('active')
      }
  </script>
  <script src="/js/detalleProducto.js"></script>
</body>
</html>