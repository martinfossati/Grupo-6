<!doctype html>
<html lang="en">
  <head>
    <title>Login FunClub </title>
    <link rel="stylesheet" href="/css/styles.css" />
    <%- include ('../partials/head.ejs') %>
  </head>
  <body class="bg-dark login">
    <%- include ('../partials/header.ejs') %>
      <section class="main-login">
        <div class="capa"></div>
                <div class="formulario-login">
                <h1 class="registrate">Bienvenido de vuelta</h1>
                <form action="/login" method="POST" id="formLogin">
                    <div class="mb-4">
                      <label for="email" class="form-label">Email:</label>
                      <input type="email" id="emailLogin" name="email" class="form-input" placeholder="Ingresa tu email" value="<%= locals.oldData ? oldData.email : null %>">
                      <div id="emailErrorLogin" class="text-error"></div>
                      <% if (locals.errors && errors.email) { %>
                        <div class="text-alert">
                            <i class="fas fa-exclamation-circle"></i><%= errors.email.msg %><i class="fas fa-exclamation-circle"></i>
                        </div> 
                      <% } %> 
                    </div>
                    <div class="mb-4">
                      <label for="password" class="form-label">Contraseña:</label>
                      <input type="password" name="password" id="password" placeholder="Crea una contraseña" class="form-input">
                      <a href="" id="emailHelp" class="form-text text-muted text-decoration-none">¿Has olvidado tu contraseña?</a>
                    </div>
                    <label for="" class="texto-checkbox">
                      <input type="checkbox" name="rememberUser" class="texto-usuario"> Recordar mi usuario
                    </label>
                    <button type="submit" class="btn btn-primary w-100 boton-login" >Iniciar sesión</button>
                  </form>
                </div>

                <div class="text-center px-lg-5 pt-lg-3 pb-lg-4 p-4 mt-auto w-100">
                    <p class="texto-checkbox">¿Todavia no tienes una cuenta?</p> <a href="/register" class="text-light font-weight-bold text-decoration-none">Crea una ahora</a>
                  </div>
            </div>
        </div>
      </section>
    <!-- Optional JavaScript -->
    <!-- Popper.js first, then Bootstrap JS -->
    <script src="/js/loginValidations.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/5.0.0-alpha1/js/bootstrap.min.js" integrity="sha384-oesi62hOLfzrys4LxRF63OJCXdXDipiYWBnvTl9Y9/TRlw5xlKIEHpNyvvDShgf/" crossorigin="anonymous"></script>
  </body>
</html>
