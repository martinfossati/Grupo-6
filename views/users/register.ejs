<!DOCTYPE html>
<html lang="en">
<head>
    <%- include ('../partials/head.ejs') %>
    <title>Register</title>
    <link rel="stylesheet" href="/css/login-register.css">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.5.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="/css/home.css">  
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@200;300;400;600&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Material+Icons|Material+Icons+Outlined|Material+Icons+Two+Tone|Material+Icons+Round|Material+Icons+Sharp" rel="stylesheet">
</head>
<body>
    <%- include ('../partials/header.ejs') %>
    <div class="main-register">
        <div class="capa"></div>
        <div class="formulario-register">
            <h2>Registrate a Fanslub!</h2>
            <form action="/register" method="POST" enctype="multipart/form-data">
                <div class="register">
                    <label for="nombre" class="form-label" id="lbl-nombre">Nombre:</label>
                    <input type="text" id="nombre" name="nombre" class="form-input" value="<%= locals.oldData ? oldData.nombre : null %>" placeholder="Ingresa tu nombre">
                    <% if (locals.errors && errors.nombre) { %>
                        <div class="text-alert">
                            <i class="fas fa-exclamation-circle"></i><%= errors.nombre.msg %><i class="fas fa-exclamation-circle"></i>
                        </div> 
                    <% } %> 
                </div>
                <div class="register">
                    <label for="apellido" class="form-label">Apellidos:</label>
                    <input type="text" id="apellido" name="apellido" class="form-input" value="<%= locals.oldData ? oldData.apellido : null %>" placeholder="Ingresa tus apellido">
                    <% if (locals.errors && errors.apellido) { %>
                        <div class="text-alert">
                            <i class="fas fa-exclamation-circle"></i><%= errors.apellido.msg %><i class="fas fa-exclamation-circle"></i>
                        </div> 
                    <% } %> 
                </div>
                <div class="register">
                    <label for="fechaNacimiento" class="form-label">Fecha de nacimiento:</label>
                    <input type="date" id="fechaNacimiento" name="fechaNacimiento" class="form-input">
                    <% if (locals.errors && errors.fechaNacimiento) { %>
                        <div class="text-alert">
                            <i class="fas fa-exclamation-circle"></i><%= errors.fechaNacimiento.msg %><i class="fas fa-exclamation-circle"></i> 
                        </div> 
                    <% } %> 
                </div>
                <div class="register">
                    <label for="email" class="form-label">Email:</label>
                    <input type="email" id="email" name="email" class="form-input" value="<%= locals.oldData ? oldData.email : null %>" placeholder="Ingresa tu email">
                    <% if (locals.errors && errors.email) { %>
                        <div class="text-alert">
                            <i class="fas fa-exclamation-circle"></i><%= errors.email.msg %><i class="fas fa-exclamation-circle"></i> 
                        </div> 
                    <% } %> 
                </div>
                <div class="register">
                    <label for="password" class="form-label">Contraseña:</label>
                    <input type="password" name="password" id="password" placeholder="Crea una contraseña" class="form-input">
                    <% if (locals.errors && errors.password) { %>
                        <div class="text-alert">
                            <i class="fas fa-exclamation-circle"></i><%= errors.password.msg %><i class="fas fa-exclamation-circle"></i> 
                        </div> 
                    <% } %> 
                </div>
                <div class="register">
                    <label for="avatar" class="form-label">Ingresa avatar:</label>
                    <input type="file" id="avatar" name="avatar" class="form-input" style="color: white;">
                </div>
                <div class="boton-register">
                    <button type="submit"> ENVIAR </button>
                </div>
            </form>
        </div>
    </div>
    <script>
        function menuToggle(){
            const toggleMenu = document.querySelector('.menu');
            toggleMenu.classList.toggle('active')
        }
    </script>
</body>
</html>